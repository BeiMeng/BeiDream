@model BeiDream.Demo.Web.Areas.Systems.Models.Role.VmRoleAddorEdit
<div class="divForm">
    <div class="formtitle">角色管理</div>
    <form id="form" class="form" action="@Url.Action("Save","Role")" gridid="dg" confirm="确认是否保存吗？">
        <dl>
            <dt><label for="Name">角色名</label></dt>
            <dd>
                <input class="easyui-textbox" name="Name" data-options="required:true,missingMessage:'角色名不能为空',validType:'maxLength[100]'" value="@Model.Name" />
            </dd>
        </dl>
        <dl>
            <dt><label for="Password">描述</label></dt>
            <dd>
                <input class="easyui-textbox" name="Description" data-options="required:true,missingMessage:'密码不能为空',validType:'maxLength[40]'" value="@Model.Description" />
            </dd>
        </dl>
        <dl>
            <dt><label for="Enabled">是否管理员</label></dt>
            <dd>
                <select class="easyui-combobox" data-options="editable:false,panelHeight:'auto',width:50,required:true,missingMessage:'是否管理员不能为空'" name="Enabled"><option value="false" selected="selected">否</option><option value="true">是</option></select>
            </dd>
        </dl>
        <dl>
            <dt><label for="Enabled">启用</label></dt>
            <dd>
                <input class="easyui-combobox" name="Enabled" data-options="valueField:'value',textField:'text',url:'/Role/ToYesOrNoResult'" value="@Model.Enabled.ToString()" />
            </dd>
        </dl>
        @*Id是数据标识*@
        @Html.HiddenFor(t => t.Id)
        @*Version是版本号,控制并发*@
        @Html.HiddenFor(t => t.Version)
        @*防止伪造提交操作*@
        @Html.AntiForgeryToken()
    </form>
</div>
<div id="dialogButtons">
    <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-ok',width:90" onclick="$.easyui.form.submit(null, null, '', '')">保 存</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-cancel',width:90" onclick="$.easyui.closeDialog()">关 闭</a>
</div>